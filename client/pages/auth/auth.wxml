<import src="../../plugins/zanui-weapp/dist/toptips/index.wxml" />
<view class='page'>
  <view class='page__hd'>
    <view class='page__title'>管理员登录</view>
  </view>

  <view class='page__bd'>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">用户名</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" placeholder="请输入管理员ID" 
					bindinput='handleUserNameInput'/>
        </view>
      </view>
      <view class="weui-cell weui-cell_input weui-cell_vcode">
        <view class="weui-cell__hd">
          <view class="weui-label">密码</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" password='true' placeholder="请输入密码" bindinput='handlePasswordInput'/>
        </view>
      </view>
    </view>
		<view class='page__bd page__bd_spacing' style='padding-top:50rpx'>
      <button class='weui-btn' type='primary' bindtap='login' disabled='{{!props.store.isValid}}'>登录</button>
    </view>
  </view>
</view>
