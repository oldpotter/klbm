<view class='page'>

  <view class='page__bd' style='margin-top:100rpx'>
    <view class='weui-cells weui_cells-after-title'>
      <view class='weui-cell weui-cell_input'>
        <view class='weui-cell__bd'>
          <input class='weui-input' bindinput='handleNameChanged' placeholder='请输入报名人的名字'>{{props.store.name}}</input>
        </view>
      </view>
    </view>

    <view class='page__bd_spacing' style='padding-top: 50rpx'>
      <button class='weui-btn' type='primary' bindtap='handleSaveBtnTap' disabled='{{!props.store.isValid}}'>保存</button>
    </view>
  </view>
</view>